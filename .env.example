# Public base URL used for server-side fetches when available.
NEXT_PUBLIC_BASE_URL=

# Sanity configuration
NEXT_PUBLIC_SANITY_PROJECT_ID=
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01
SANITY_PROJECT_ID=
SANITY_DATASET=production
SANITY_API_VERSION=2024-01-01
# Optional: read token for private datasets (not required for public datasets).
SANITY_READ_TOKEN=
# Optional: used for CLI auth/organization targeting
SANITY_ORG_ID=

# Webhook secret for on-demand revalidation (to be added in later PRs).
REVALIDATION_TOKEN=

# Basic API rate limiting
# Window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000
# Maximum requests per window (default: 120)
RATE_LIMIT_MAX=120

# Redis for production rate limiting (optional but recommended for production)
# If not set, falls back to in-memory store (NOT suitable for multi-instance deployments)
# Example with Upstash: rediss://default:password@region.upstash.io:6379
# Example with local Redis: redis://localhost:6379
REDIS_URL=

# Node environment (development, production, test)
NODE_ENV=development
